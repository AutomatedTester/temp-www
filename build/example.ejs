<html>
<head>
    <script>
      document.domain = 'nightwatchjs.org';
    </script>
    <script src="https://unpkg.com/@stackblitz/sdk@1/bundles/sdk.umd.js"></script>
</head>
<body>
<script>
  StackBlitzSDK.openProject(
    // Payload:
    {
      files: {
        'test/<%- name %>.js': `<%- contents %>`,
        'README.md': `# .<%- name %>() example
`,
        'package.json': `{
  "name": "nightwatch-<%- name %>",
  "version": "0.0.0",
  "scripts": {
    <% if (editorOnly) { } else { %> "start": "nightwatch test/<%- name %>.js --env stackblitz"<% } %>
  },
  "dependencies": {<% if (editorOnly) { } else { %>
    "nightwatch": "2.3.0",
    "serve-handler": "^6.1.3",
    "chromedriver": "^103.0.0"<% } %>
  }

}`,
        'nightwatch.conf.js': `
module.exports = {
  src_folders: ['test'],

  test_settings: {
    default: {
      launch_url: 'https://nightwatchjs.org',

      screenshots: {
        enabled: true,
        path: 'screens',
        on_failure: true
      },

      desiredCapabilities: {},

      webdriver: {
        start_process: true,
        host: 'localhost'
      }
    },

    stackblitz: {
      webdriver: {
        default_path_prefix: '',
        start_process: false,
        host: 'remotedriver.nightwatchjs.org',
        port: 443
      },

      globals: {
        after(done) {
          const handler = require('serve-handler');
          const http = require('http');

          const server = http.createServer((request, response) => {
            return handler(request, response, {
              public: './tests_output/nightwatch-html-report',
            });
          });

          server.listen(3000, () => {
            console.log('Running at http://localhost:3000');
          });
          done();
        }
      },

      desiredCapabilities: {
        browserName: 'chrome',
        'goog:chromeOptions': {}
      }
    },

    chrome: {
      desiredCapabilities: {
        browserName: 'chrome'
      }
    }
  }
};`
      },
      template: 'node',
      title: 'Nightwatch <%- name %>() example',
      description: `Try the <%- name %>() example directly in your browser.`,
    },

    // Options
    {
      newWindow: false,
      hideNavigation: true,
      hideExplorer: <% if (editorOnly) { %>true<% } else { %> false <% } %>,
      terminalHeight: <% if (editorOnly) { %>0<% } else { %> 45 <% } %>,
      showSidebar: false,
      view: <% if (editorOnly) { %>'editor'<% } else { %> 'both'<% } %>,
      openFile: 'test/<%- name %>.js'
    }
  );
  window.onbeforeunload = function(e) {
    e.returnValue = null
  }
</script>
</body>
</html>

